<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CallaciMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CallaciMaui"
    xmlns:pages="clr-namespace:CallaciMaui.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Quiz"
        ContentTemplate="{DataTemplate pages:NewPage5}"
        Route="Quiz" />

    <ShellContent
        Title="AdminPage"
        ContentTemplate="{DataTemplate pages:NewPage1}"
        Route="AdminPage" />

    <ShellContent
        Title="DataViewPage"
        ContentTemplate="{DataTemplate pages:DataPage}"
        Route="DataViewPage" />

</Shell>
